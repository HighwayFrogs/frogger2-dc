		DIV1	R1,R2
		ROTCL	R0
		DIV1	R1,R2
		ROTCL	R0
		DIV1	R1,R2
		ROTCL	R0
		DIV1	R1,R2
		
		ROTCL	R0			
		DIV1	R1,R2
		ROTCL	R0
		DIV1	R1,R2
		ROTCL	R0
		DIV1	R1,R2
		ROTCL	R0
		DIV1	R1,R2
		ROTCL	R0
		DIV1	R1,R2
		ROTCL	R0
		DIV1	R1,R2
		ROTCL	R0
		DIV1	R1,R2
		ROTCL	R0
		DIV1	R1,R2

		ROTCL	R0			
		DIV1	R1,R2
		ROTCL	R0
		DIV1	R1,R2
		ROTCL	R0
		DIV1	R1,R2
		ROTCL	R0
