/*
 *	cfloat
 */
 
#ifndef	_CFLOAT_
#define _CFLOAT_

#include <float.h>

#ifdef __cplusplus
	#ifdef _MSL_USING_NAMESPACE
		namespace std {
	#endif
	extern "C" {
#endif

extern _MSL_DLLDATA long __double_epsilon[];
extern _MSL_DLLDATA long __extended_epsilon[];


#define FLT_EPSILON					1.192092896e-07F
#define DBL_EPSILON					(* (double *) __double_epsilon)
#define LDBL_EPSILON				(* (long double*) __extended_epsilon)

#ifdef __cplusplus
	}
	#ifdef _MSL_USING_NAMESPACE
		}
	#endif
#endif

#endif /* _CFLOAT_  */

/*  Changes
 *  ad   990222	Include the O/S specific header rather than MSL
